@model CarrinhoCompraViewModel;

<div class="Container">
    <div class="Row">
        <img src="~/img/Full-Cart-icon.png"/>
        <div>
            <h4>Seu carrinho de compras: </h4>

            <table class="d-lg-table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Quantidade</th>
                        <th>Lanche</th>
                        <th class="text-right">Preço</th>
                        <th class="text-right">Total</th>
                        <th></th>
                    </tr>
                </thea>
            <tbory>
                @foreach(var item in Model.CarrinhoCompra.CarrinhoCompraItems) {
                    <tr>
                        <td class="text-center">@item.Quantidade</td>
                        <td class="text-left">@item.Lanche.Nome</td>
                        <td class="text-right">@item.Lanche.Preco.ToString("c")</td>
                        <td class="text-right">@item.Quantidade * @item.Preco.ToString("c")</td>

                        @*tag helper
                          bootstrap
                        *@
                        <td class="text-center">
                            <a asp-controller="CarrinhoCompra" asp-action="RemoverItemCarrinhoCompra"
                                asp-route-lancheId="@item.Lanche.LancheId"><img src="~/img/ícone lixeira-01.png"></a>
                        </td>
                    </tr>
                }
            </tbory>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right"> Total: </td>
                    <td class="text-right">@Model.CarrinhoCompraTotal.ToString("c")</td>
                </tr>
            </tfoot>
            </table>
            <div class="text-right">
                <div class="btn-group">
                    <a class="btn btn-success" asp-controller="Pedido" asp-action"checkout">Encerrar pedido</a>
                        &nbsp;&nbsp;&nbsp;
                    <a class="btn btn-primary" asp-controller="Lanche" asp-action"List">Continuar Comprando</a>
                </div>
            </div>
        </div>
    </div>
</div>